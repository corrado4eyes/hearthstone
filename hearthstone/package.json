    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/config/setupEnzyme.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/config/",
      "<rootDir>/__tests__/__mocks__/",
      "<rootDir>/__tests__/testUtils"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.js$": "ts-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss|png|jpg|jpeg)$": "<rootDir>/__tests__/config/styleMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "scripts": {
    "start": "webpack-dev-server --inline --content-base ./dist",
    "build": "webpack",
    "test": "jest",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.23",
    "@types/mocha": "^5.2.7",
    "enzyme": "^3.10.0",
